@model AutentifyAPI.ViewModels.UtilisateurVM
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-group {
        margin-bottom: 5px;
      /*  padding-left: 50px;*/
    }
</style>

<nav aria-label="breadcrumb" class="nav-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="Home/Index">Accueil</a></li>
        <li class="breadcrumb-item"><a asp-controller="DonneesGeneraux" asp-action="ConsulterListeUtilisateur">Gestions des utilisateurs</a></li>
        <li class="breadcrumb-item active" aria-current="page">Ajouter </li>
    </ol>
</nav>

<div class="row">

    <div class="col-lg-12">

        @using (Html.BeginForm("EnregistrerUtilisateur", "GestionUtilisateurs", FormMethod.Post, new { @class = "col-lg-12", enctype = "multipart/form-data" }))
        {


            <div class="row" style="margin-top:1em">
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Nom) <span class=" fa fa-user" aria-hidden="true">*</span>
                        @Html.TextBoxFor(Model => Model.Nom, new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Prenom)  <span class=" fa fa-user" aria-hidden="true">.</span>
                        @Html.TextBoxFor(Model => Model.Prenom, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Telephone)  <span class=" fa fa-phone" aria-hidden="true">.</span>
                        @Html.TextBoxFor(Model => Model.Telephone, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Email) <span class=" fa fa-envelope" aria-hidden="true">*</span>
                        @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="select" style="width:100%">Sexe <span class="requiredInput">*</span> </label>
                        <select asp-for="Sexe" class="form-control form-control-sm">
                            @{ foreach (Sexe value in Enum.GetValues(typeof(Sexe))) {
                                <option value="@value">@AutentifyAPI.Models.DisplayEnum.GetSexe(value)</option> }
                                }
                        </select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.DateNaissance) <span class="fa fa-calendar">*</span>
                        @Html.TextBoxFor(Model => Model.DateNaissance, new { @class = "form-control", type ="Date"})
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.LieuNaissance) <span class=" fa fa-location-arrow" aria-hidden="true">*</span>
                        @Html.TextBoxFor(Model => Model.LieuNaissance, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Login) <span class="fa fa-user-secret" aria-hidden="true">*</span>
                        @Html.TextBoxFor(Model => Model.Login, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Photo) <span class="fa fa-soccer-ball-o">*</span>
                        @Html.TextBoxFor(Model => Model.Photo, new { @class = "form-control", type = "file"})
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="select" style="width:100%">Agence <span class="requiredInput">*</span> </label>
                        <select class="form-control" asp-for="AgenceId">
                            @foreach (var item in (List<AutentifyAPI.Models.Agence>)ViewBag.Agen)
                            {
                                <option value="@item.AgenceId">@item.Libelle</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="select" style="width:100%">Langue <span class="requiredInput">*</span> </label>
                        <select class="form-control" asp-for="LangueId">
                            @foreach (var item in (List<AutentifyAPI.Models.Langue>)ViewBag.Lang)
                            {
                                <option value="@item.LangueId">@item.Libelle</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="select" style="width:100%">Rôle <span class="requiredInput">*</span> </label>
                        <select class="form-control" asp-for="RoleId">
                            @foreach (var item in (List<AutentifyAPI.Models.Role>)ViewBag.Role)
                            {
                                <option value="@item.RoleId">@item.Libelle</option>
                            }
                        </select>
                    </div>
                </div>

            </div>

            <div class="row" style="margin-top:2em;">
                <div class="fa-hover col-md-2 col-sm-4 ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-primary">
                            <span><i class="fa fa-check-circle-o"></i></span>
                        </button>
                    </div>
                </div>
                <div class="fa-hover col-md-2 col-sm-4 ">
                    <div class="form-group">
                        <button type="reset" class="btn btn-outline-primary">
                            <span><i class="fa fa-times-circle-o"></i></span>
                        </button>
                    </div>
                </div>

            </div>

        }
    </div>

</div>

<style>
        .fa-check-circle-o {
            color: #2da5d5;
        }

        .fa-times-circle-o {
            color: #d81212;
        }
    </style>



