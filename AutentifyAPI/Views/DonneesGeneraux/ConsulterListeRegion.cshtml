
@model IEnumerable<AutentifyAPI.Models.Region>
@{
    ViewData["Title"] = "Region";
}
<nav aria-label="breadcrumb" class="nav-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Accueil</a></li>
        <li class="breadcrumb-item active" aria-current="page">Liste des Regions</li>
    </ol>
</nav>

<div class="row" style="margin-left:450px;">
    <div class="fa-hover col-md-2 col-sm-4 ">
        <div class="form-group">
            <span style="font-size:60px;"> <a asp-controller="DonneesGeneraux" asp-action="EnregistrerRegion"><i class="fa fa-plus-circle"></i> </a></span>
        </div>
    </div>

</div>

<div class="container">
    <hr>

    <table id="datatable" class="table table-sm table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom de la région</th>
                <th>Pays</th>
                <th>..</th>
            </tr>
        </thead>
        <tbody>

            @{
                int i = 0;
                foreach (var region in Model)
                {

                    <tr>
                        <td>
                            <span>@(++i)</span>
                        </td>
                        <td>
                            @region.Nom
                        </td>
                        <td>
                            @region.Pays.NomPays
                        </td>
                        <td>
                            <a href="~/DonneesGeneraux/ModifierRegion/@region.RegionId">
                            <span style ="color:red;"class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<style>
    .fa-hover {
        margin-bottom: 5px;
    }
</style>












